{
  "compilerOptions": {
    "target":                           "es6",
    "esModuleInterop":                  true,
    "forceConsistentCasingInFileNames": true,
    "strict":                           true,
    "skipLibCheck":                     true,
    "jsx":                              "preserve",
    "module":                           "ESNext",
    "declaration":                      true,
    "declarationDir":                   "types",
    "sourceMap":                        true,
    "outDir":                           "dist",
    "moduleResolution":                 "node",
    "allowSyntheticDefaultImports":     true,
    "emitDeclarationOnly":              true,
    "lib":                              [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs":                          true,
    "noEmit":                           true,
    "incremental":                      true,
    "resolveJsonModule":                true,
    "isolatedModules":                  true
  },
  "include": [
    "src/*.ts",
    "src/*.tsx",
    "declarations.d.ts"
  ],
  "exclude":         [
    "**/node_modules/*"
  ]
}
